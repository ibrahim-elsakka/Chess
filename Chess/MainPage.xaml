            <Button Background="#fff0e5" Grid.Row="4" Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R5C7_Clicked"/>
            <Button Background="#512302" Grid.Row="4" Grid.Column="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R5C8_Clicked"/>
            <!-- Row 6 -->
