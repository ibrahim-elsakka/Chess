            <Button Background="#512302" Grid.Row="7" Grid.Column="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R8C5_Clicked"/>
            <Button Background="#fff0e5" Grid.Row="7" Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R8C6_Clicked"/>
            <Button Background="#512302" Grid.Row="7" Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R8C7_Clicked"/>
            <Button Background="#fff0e5" Grid.Row="7" Grid.Column="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R8C8_Clicked"/>

            <!-- Don't bother placing the selected tile highlight or the
            pieces in their proper positions, we do that programmatically -->
            <Image Name="SelectedTile" Source="Assets/Game/Tile-Selected.png" Grid.Row="0" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed"/>
            <!-- White Pieces -->
            <Image Name="WhitePawn1" Source="Assets/Game/WhitePieces/Pawn-White.png" Grid.Row="7" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Image Name="WhitePawn2" Source="Assets/Game/WhitePieces/Pawn-White.png" Grid.Row="7" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Image Name="WhitePawn3" Source="Assets/Game/WhitePieces/Pawn-White.png" Grid.Row="7" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Image Name="WhitePawn4" Source="Assets/Game/WhitePieces/Pawn-White.png" Grid.Row="7" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
