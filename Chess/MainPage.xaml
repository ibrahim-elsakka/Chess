            <Image Name="WhiteQueen" Source="Assets/Game/WhitePieces/Queen-White.png" Grid.Row="7" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Image Name="WhiteKing" Source="Assets/Game/WhitePieces/King-White.png" Grid.Row="7" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <!-- Black Pieces -->
            <Image Name="BlackPawn1" Source="Assets/Game/BlackPieces/Pawn-Black.png" Grid.Row="0" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Image Name="BlackPawn2" Source="Assets/Game/BlackPieces/Pawn-Black.png" Grid.Row="0" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Image Name="BlackPawn3" Source="Assets/Game/BlackPieces/Pawn-Black.png" Grid.Row="0" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
