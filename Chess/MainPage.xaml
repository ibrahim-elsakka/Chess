            <Button Background="#512302" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R2C5_Clicked"/>
            <Button Background="#fff0e5" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R2C6_Clicked"/>
            <Button Background="#512302" Grid.Row="1" Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R2C7_Clicked"/>
            <Button Background="#fff0e5" Grid.Row="1" Grid.Column="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R2C8_Clicked"/>
            <!-- Row 3 -->
            <Button Background="#fff0e5" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R3C1_Clicked"/>
            <Button Background="#512302" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="R3C2_Clicked"/>
