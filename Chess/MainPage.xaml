            <Image Name="WhiteKnight1" Source="Assets/Game/WhitePieces/Knight-White.png" Grid.Row="7" Grid.Column="0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
